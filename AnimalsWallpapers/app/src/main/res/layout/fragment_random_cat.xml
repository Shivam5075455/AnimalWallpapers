<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CatFragments.RandomCatFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/tvCuteCat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/dim_3"
        android:gravity="center"
        android:text="@string/random_cat"
        android:textSize="@dimen/dim_20"
        android:textStyle="bold"
        tools:ignore="TextSizeCheck" />

    <ImageView
        android:id="@+id/imgRandomCat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tvCuteCat"
        android:layout_marginTop="@dimen/dim_5"
        android:src="@drawable/cutecat"
        tools:ignore="SpeakableTextPresentCheck" />


</RelativeLayout>